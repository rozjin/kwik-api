{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "kwik/*": ["src/*"],
    },

    "target": "ES2020",
    "outDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },

  "include": ["src/**/*"],
  "files": ["typings/express.d.ts"]
}
